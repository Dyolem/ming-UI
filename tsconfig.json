{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "preserve",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,

    "module": "ESNext",

    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,

    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "ming-UI": [
        "packages/ming-UI/src"
      ],
      "ming-UI/*": [
        "packages/ming-UI/src/*"
      ],
      "@ming-UI/utils": [
        "packages/utils/src"
      ],
      "@ming-UI/icons": [
        "packages/icons/src"
      ]
    },
    "types": ["vitest/globals", "vite-plugin-svg-icons/client"]
  },
  "references": [
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.vitepress.json" }
  ]
}
